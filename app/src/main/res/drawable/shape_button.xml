    <gradient
        android:angle="270"
        android:startColor="@android:color/holo_blue_light"
        android:endColor="@android:color/holo_blue_dark"/>

    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"/>

    <corners
